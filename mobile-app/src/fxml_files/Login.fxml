<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="634.0" prefWidth="363.0"
            xmlns="http://javafx.com/javafx/22"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="LoginController">

   <children>
      <AnchorPane fx:id="baselineAnchor"
                  layoutX="-1.0" layoutY="-12.0"
                  prefHeight="659.0" prefWidth="371.0"
                  stylesheets="@stylesheet.css" />

      <!-- Hata / Bilgi mesajı göstermek için Text (fx:id="loginError") -->
      <Text fx:id="loginError"
            fill="#145f9c"
            layoutX="24.0" layoutY="424.0"
            strokeLineCap="ROUND"
            strokeType="OUTSIDE"
            strokeWidth="0.0"
            textAlignment="CENTER"
            wrappingWidth="320.80001220703116">
         <font>
            <Font name="Calibri Light" size="15.0" />
         </font>
      </Text>

      <!-- Kullanıcı adı girişi -->
      <TextField fx:id="usernameLogin"
                 layoutX="77.0" layoutY="303.0"
                 prefHeight="27.0" prefWidth="214.0"
                 promptText="Username" />

      <!-- Şifre girişi -->
      <PasswordField fx:id="passwordLogin"
                     layoutX="74.0" layoutY="374.0"
                     prefHeight="26.0" prefWidth="214.0"
                     promptText="Password" />

      <!-- Başlık -->
      <Text fill="WHITE"
            layoutX="21.0" layoutY="196.0"
            stroke="WHITE"
            strokeLineCap="ROUND"
            text="Login"
            textAlignment="CENTER"
            wrappingWidth="320.80001220703116">
         <font>
            <Font name="Arial" size="40.0" />
         </font>
      </Text>

      <!-- "Login" butonu: Artık onMouseClicked="#handleLogin" -->
      <Button fx:id="LoginToApp"
              layoutX="75.0" layoutY="488.0"
              mnemonicParsing="false"
              onMouseClicked="#handleLogin"
              prefHeight="36.0" prefWidth="214.0"
              stylesheets="@stylesheet.css"
              text="Login"
              textFill="WHITE">
         <font>
            <Font name="Arial Bold" size="20.0" />
         </font>
      </Button>

      <!-- "Create new account" metni -->
      <Text fill="#008304"
            layoutX="20.0" layoutY="562.0"
            onMouseClicked="#switchToSignUpScene"
            strokeLineCap="ROUND"
            strokeType="OUTSIDE"
            strokeWidth="0.0"
            text="Create new account"
            textAlignment="CENTER"
            wrappingWidth="320.80001220703116">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Text>
   </children>
</AnchorPane>